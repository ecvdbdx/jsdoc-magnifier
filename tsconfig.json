{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./packages"
    },
    "include": ["packages/**/*", "playground/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
